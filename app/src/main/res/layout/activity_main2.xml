                app:piv_dynamicCount="true"
                app:piv_rtl_mode="auto"
                app:piv_animationType="thinWorm"
                app:piv_unselectedColor="#ccc"
                app:piv_selectedColor="#f00"
                app:piv_radius="5dp"
                app:piv_interactiveAnimation="true"
